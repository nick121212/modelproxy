{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "node": true,
        "es6": true,
        "commonjs": true,
        "amd": true
    },
    "plugins": [
        "standard"
    ],
    "parser": "esprima",
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    }
}